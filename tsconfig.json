{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "skipLibCheck": true,
    "stripInternal": true,
    "noImplicitAny": true,
    "types": [
      "meteor-typings",
      "@types/underscore"
    ],
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "client/**/*.ts",
    "server/**/*.ts",
    "imports/**/*.ts"
  ],
  "exclude": [
    "bower_components",
    "node_modules"
  ],
  "angularCompilerOptions": {
    "genDir": ".",
    "skipMetadataEmit": true
  },
  "awesomeTypescriptLoaderOptions": {
    "useTranspileModule": true,
    "usePrecompiledFiles": true,
    "useWebpackText": true
  },
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}